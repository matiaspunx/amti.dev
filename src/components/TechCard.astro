---
const { tech } = Astro.props;
---

<div
  class="group flex flex-col items-center justify-center space-y-4 rounded-md bg-purple-500/90 p-4 text-center transition hover:bg-purple-600/90"
>
  <h3 class="text-2xl font-semibold text-indigo-200">
    <span class="badge">{tech.title}</span>
  </h3>
  <p class="text-balance text-base text-neutral-100">
    {tech.description}
  </p>
</div>
<style>
  .badge {
    @apply inline-block cursor-pointer rounded-md border border-purple-400 px-2 py-1 transition group-hover:rotate-2 group-hover:scale-150 group-hover:border-purple-500 group-hover:bg-purple-600;
  }
</style>
